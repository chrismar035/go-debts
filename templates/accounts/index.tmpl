<div class="row">
    <div class="col-md-12">
        <h1>{{ .UserName }}</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <table class="table">
            <thead>
                <tr>
                    <th>Account</th>
                    <th>Current Balance</th>
                </tr>
            </thead>
            <tbody>
                {{ range $account := .Accounts }}
                    <tr>
                        <td>
                            <a href="/accounts/{{ $account.ID }}">{{ $account.Name }}</a>
                        </td>
                        <td style="text-align:right;">${{ $account.Balance | printf "%.2f" }}</td>
                    </tr>
                {{ else }}
                    <tr><td colspan=2>You have no accounts.</td><tr>
                {{ end }}
            </tbody>
        </table>
    </div>
</div>
